        <section class="destination__container" id="destination_container">
        <% if (destinationTitle) { %>
            <div class="row">
                <h2 class="desginaton__title"> <%- destinationTitle %> </h2>
            </div>
        <% } %>

        <% if (firstTitle) { %>
            <div class="row">
                <div class="col-1-of-2">
                    <img class="destination__image" alt="destination picture" src="<%- firstImg %>">
               </div>

                <div class="col-1-of-2">
                    <h2 class="destination__blog--title heading-secondary">
                        <%- firstTitle %> 
                    </h2>
                    <p class="destination__blog--text">
                        <%- firstParagraph %>
                    </p> 
                </div>
           </div>
        <% } %>


        <% if (secondParagraph) { %>
           <div class="row">
                <div class="col-1-of-2 show-on-mobile">
                    <img class="destination__image" alt="destination picture" src="<%- secondImg %>">
                    
                </div>
                <div class="col-1-of-2">
                    <h2 class="destination__blog--title heading-secondary">
                         <%- secondTitle %>
                    </h2>
                    <p class="destination__blog--text">
                         <%- secondParagraph %>
                    </p>
                </div>

                <div class="col-1-of-2 show-on-desktop">
                    <img class="destination__image" alt="destination picture" src="<%- secondImg %>">
                </div>

               
            </div>
        <% } %>



            <% if (thirdParagraph) { %>
              <div class="row">
                            <div class="col-1-of-2">
                                <img class="destination__image" alt="destination picture" src="<%- thirdImg %>">
                            </div>

                            <div class="col-1-of-2">
                                <h2 class="destination__blog--title heading-secondary">
                                     <%- thirdTitle %>
                                </h2>
                                <p class="destination__blog--text">
                                     <%- thirdParagraph %>
                                </p>
                            </div>
                        </div>
            <% } %>

            

        </section>


        

